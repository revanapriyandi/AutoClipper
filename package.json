{
  "name": "autoclipper",
  "version": "1.0.0",
  "description": "AI-powered desktop app to auto-cut, caption, and publish viral short videos to YouTube, TikTok & Facebook.",
  "author": "revanapriyandi",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "node dev-runner.js",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on tcp:localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.autoclipper.app",
    "productName": "AutoClipper",
    "publish": {
      "provider": "github",
      "owner": "revanapriyandi",
      "repo": "AutoClipper"
    },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "compression": "maximum",
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json",
      "prisma/schema.prisma",
      "prisma/dev.db",
      "!**/node_modules/*/{CHANGELOG.md,README.md,readme.md,readme,CHANGES,HISTORY,LICENCE,LICENSE,NOTICE,*.txt,*.md}",
      "!**/node_modules/*/{test,__tests__,tests,spec,specs,example,examples,demo,demos,docs,doc,coverage}/**",
      "!**/node_modules/.bin/**",
      "!**/*.map",
      "!**/*.ts",
      "!**/.eslintrc*",
      "!**/.prettierrc*"
    ],
    "asarUnpack": [
      "**/*.node",
      "electron/prisma-client/*.node",
      "node_modules/better-sqlite3/**",
      "node_modules/keytar/**",
      "node_modules/ffmpeg-static/**",
      "node_modules/ffprobe-static/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "@deepgram/sdk": "^4.11.3",
    "@prisma/adapter-better-sqlite3": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/supabase-js": "^2.98.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.3.1",
    "electron-updater": "^6.3.9",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "keytar": "^7.9.0",
    "lucide-react": "^0.575.0",
    "next": "14.2.35",
    "next-intl": "^4.8.3",
    "next-themes": "^0.4.6",
    "react": "^18",
    "react-day-picker": "^9.14.0",
    "react-dom": "^18",
    "recharts": "^3.7.0",
    "tailwind-merge": "^3.5.0",
    "tailwindcss-animate": "^1.0.7",
    "wavefile": "^11.0.0",
    "youtube-dl-exec": "^3.1.3",
    "yt-search": "^2.13.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.35",
    "jimp": "^1.6.0",
    "postcss": "^8",
    "prisma": "^7.4.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  }
}
