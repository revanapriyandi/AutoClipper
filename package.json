{
  "name": "autoclipper",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "dotenv -e .env -- next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on tcp:localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.autoclipper.app",
    "productName": "AutoClipper",
    "publish": {
      "provider": "github",
      "owner": "revanapriyandi",
      "repo": "AutoClipper"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json",
      "prisma/**/*",
      "prisma.config.ts"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "asarUnpack": [
      "**/*.node",
      "node_modules/@prisma/engines/**/*",
      "node_modules/@prisma/client/**/*",
      "node_modules/.prisma/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "@deepgram/sdk": "^4.11.3",
    "@prisma/client": "^7.4.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "axios": "^1.13.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.3.1",
    "electron-updater": "^6.3.9",
    "fluent-ffmpeg": "^2.1.3",
    "keytar": "^7.9.0",
    "lucide-react": "^0.575.0",
    "next": "14.2.35",
    "next-intl": "^4.8.3",
    "react": "^18",
    "react-dom": "^18",
    "recharts": "^3.7.0",
    "tailwind-merge": "^3.5.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.35",
    "jimp": "^1.6.0",
    "postcss": "^8",
    "prisma": "^7.4.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  }
}
